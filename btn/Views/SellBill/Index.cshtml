@{
}


@model IEnumerable<btn.Models.SellBill>

@{
    ViewData["Title"] = "SellBill";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="mt-2">
    <h1>Hóa đơn bán</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Mã nhân viên</th>
                <th>Mã khách</th>
                <th>Ngày bán</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.SellBillId</td>
                    <td>@s.EmployeeId</td>
                    <td>@s.CustomerId</td>
                    <td>@s.SalesDate</td>
                    <td>@s.TotalMoney</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@s.SellBillId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@s.SellBillId">Delete</a> |
                        <a asp-action="Detail" asp-route-id="@s.SellBillId">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Tạo hóa đơn bán mới</a>
</div>
