@model btn.Models.SellBillDetail

@{
    ViewData["Title"] = "AddProductToDetail";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="mt-2">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm hàng hóa</h3>
            </div>
            <div class="card-body">

                <form asp-controller="SellBill" asp-action="CreateDetail" method="post" class="mt-3">
                   
                     <div class="form-group row mb-3">
                         <label asp-for="SellBillId" class="col-sm-4 col-form-label"></label>
                         <div class="col-sm-8">
                             <select asp-for="SellBillId" class="form-control" asp-items="ViewBag.SellBills">
                                 <option value="">-- Select an SellBillId --</option>
                             </select>
                             <span asp-validation-for="SellBillId" class="text-danger"></span>
                         </div>
                     </div>

                    <div class="form-group row mb-3">
                        <label asp-for="ProductId" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                                <option value="">-- Select an Products --</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="ProductSellAmount" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="ProductSellAmount" class="form-control" />
                            <span asp-validation-for="ProductSellAmount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="SellDiscount" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="SellDiscount" class="form-control" />
                            <span asp-validation-for="SellDiscount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                            <button type="submit" class="btn btn-primary float-right">Tạo</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}