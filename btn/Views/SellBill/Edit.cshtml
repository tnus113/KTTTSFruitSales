@model btn.Models.SellBill

@{
    ViewData["Title"] = "Chỉnh Sửa Hóa Đơn Bán";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <form asp-controller="SellBill" asp-action="Edit" method="post" class="mt-3">

            <input type="hidden" asp-for="SellBillId" />

            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Thông Tin Hóa Đơn Bán</h3>
                </div>
                <div class="card-body">

                    @* <div class="form-group row mb-3">
                        <label asp-for="SellBillId" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="SellBillId" class="form-control" />
                            <span asp-validation-for="SellBillId" class="text-danger"></span>
                        </div>
                    </div> *@

                    <div class="form-group row mb-3">
                        <label asp-for="EmployeeId" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                                <option value="">-- Select an Employee --</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="CustomerId" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
                                <option value="">-- Select an Customer --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="SalesDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="SalesDate" class="form-control" />
                            <span asp-validation-for="SalesDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="TotalMoney" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="TotalMoney" class="form-control" />
                            <span asp-validation-for="TotalMoney" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-warning float-right">Cập nhật</button>
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
